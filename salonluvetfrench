<!-- ========== FILE: script.js ========== -->
// Basic JS for navigation toggle, gallery generation and carousel controls
(function(){
  const navToggle = document.querySelector('.nav-toggle');
  const mainNav = document.querySelector('.main-nav');
  navToggle && navToggle.addEventListener('click', ()=>{
    mainNav.style.display = mainNav.style.display === 'flex' ? 'none' : 'flex';
  });

  // Gallery creation: images 1.jpg ... 25.jpg
  const total = 25;
  const track = document.querySelector('.carousel-track');
  for(let i=1;i<=total;i++){
    const li = document.createElement('li');
    li.className = 'carousel-item';
    const img = document.createElement('img');
    img.src = i + '.jpg';
    img.alt = `Unghii ${i}`;
    li.appendChild(img);
    track.appendChild(li);
  }

  // Carousel controls: show 3 per view on wide screens, 1 on small
  const prevBtn = document.querySelector('.carousel-btn.prev');
  const nextBtn = document.querySelector('.carousel-btn.next');
  let index = 0;

  function slidesPerView(){
    if(window.innerWidth <= 600) return 1;
    if(window.innerWidth <= 900) return 2;
    return 3;
  }

  function update(){
    const perView = slidesPerView();
    const items = document.querySelectorAll('.carousel-item');
    const itemWidth = items[0] ? items[0].getBoundingClientRect().width + 12 : 0; // gap approx
    const maxIndex = Math.max(0, Math.ceil(items.length / perView) - 1);
    if(index > maxIndex) index = maxIndex;
    const translateX = -(index * (itemWidth * perView));
    track.style.transform = `translateX(${translateX}px)`;
  }

  nextBtn && nextBtn.addEventListener('click', ()=>{ index++; update(); });
  prevBtn && prevBtn.addEventListener('click', ()=>{ index = Math.max(0, index-1); update(); });
  window.addEventListener('resize', update);
  // initial update after images load
  window.addEventListener('load', ()=>{ setTimeout(update,120); });

  // Add subtle hover illumination on team photos
  document.querySelectorAll('.member-photo').forEach(img=>{
    img.addEventListener('mouseenter', ()=> img.style.filter = 'brightness(1.06)');
    img.addEventListener('mouseleave', ()=> img.style.filter = 'brightness(1)');
  });

})();
